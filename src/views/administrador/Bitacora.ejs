</form>
            <table class="table table-borderer table-hover" id="listaProductos" style="width:715px">
                <thead>
                    <th scope="col">#</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Accion</th>
                        <th scope="col">Culpable</th>
                </thead>
                <tbody>
                    <% if (bit.length <= 0) { %>
                    <% for (let i=0; i < Bitacora.length; i++) { %>
                    <tr>
                        <td scope="col"><%= i+1 %></td>
                        <td scope="col"><%= Bitacora[i].fecha%></td>
                        <td scope="col"><%= Bitacora[i].accion%></td>
                        <td scope="col"><%= Bitacora[i].culpable%></td>
                    </tr>
                    <% } %>
                    <% } %>
                    <% if (bit.length > 0) { %>
                        <% for (let i=0; i < bit.length; i++) { %>
                            <tr>
                                <td scope="col"><%= i+1 %></td>
                                <td scope="col"><%= bit[i].fecha%></td>
                                <td scope="col"><%= bit[i].accion%></td>
                                <td scope="col"><%= bit[i].culpable%></td>
                            </tr>
                            <% } %>
                        <% } %>
                </tbody>
            </table>
        </div>