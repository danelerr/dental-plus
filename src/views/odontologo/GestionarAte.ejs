<%- include('../partials/barramenu') %>
    <body id="body">

        <!-----LISTA----->

        <div class="container">
            <div class="row">
                <div class="jumbotron" style="text-align: center; margin-top: 5%;">
                    <h1>
                        Registro de Atenciones
                    </h1>
                    <p align="right"> <input type="button" class="btn btn-dark" value="Volver"/></p>

               </div><br>
                       
            </div> 
        </div> 

        <div class="container">
            
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="list" role="tabpanel" aria-labelledby="list-tab">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="userList" class="table table-bordered table-hover table-striped">
                                    <thead class="thead-light">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Hora de Inicio</th>
                                        <th scope="col">Hora Final</th>
                                        <th scope="col">Nro de Ficha</th>
                                        <th scope="col">Estado</th>
                                        <th scope="col">Precio Total</th>
                                        
                                    </tr>
                                    </thead>

                                    <tbody>
                                        <% for (let i=0; i < datos.length; i++) { %>
                                            <tr>
                                                <td scope="col"><%= i+1 %></td>
                                                <td scope="col"><%= datos[i].horaInicio %></td>
                                                <td scope="col"><%= datos[i].horaFin %></td>
                                                <td scope="col"><%= datos[i].ficha %></td>
                                                <td scope="col"><%= datos[i].Estado %></td>
                                                <td scope="col"><%= datos[i].Preciototal %></td>
                                                <% if(datos[i].Estado != 'Finalizado' && datos[i].Estado != 'Abandonado') { %>
                                                    <td scope="row p-3 al">
                                                        <form action="/setestadoA" method="post">                            
                                                            <input type="hidden" name="idficha" value= <%= datos[i].ficha %> >
                                                            <input type="hidden" name="estadoRes" value="3">
                                                            <button class="btn btn-secondary" type="submit">Marcar como abandonado</button>
                                                        </form>                                                        
                                                    </td>
                                                    <% } %>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                    
                                   
                                </table>
                            </div>
    
                        </div>
                    </div>
                </div>
                
            </div>    
        
        </div>


    </body>

</html>