<%- include('../partials/barramenu') %>
<div class="container">
    <div class="row">
        <div class="jumbotron ">
            <h1>
                Tratamientos de <%= user.nombre %>
            </h1>
       </div>           
    </div> 
</div> 

<div class="container">

    <ul class="nav nav-tabs justify-content-end">
    </ul>
    
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="list" role="tabpanel" aria-labelledby="list-tab">
            <div class="card">
                <div class="card-header">
                    <h4>Tratamientos Realizados</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="userList" class="table table-bordered table-hover table-striped">
                            <thead class="thead-light">
                            <tr>
                                <th scope="col">#</th>
                                        <th scope="col">Tratamiento</th>
                                        <th scope="col">Hora de Inicio</th>
                                        <th scope="col">Hora Final</th>
                                        <th scope="col">Nro de Ficha</th>
                                        <th scope="col">Estado</th>
                                        <th scope="col">Precio Total</th>
                                        <th scope="col"></th>
                            </tr>
                            </thead>
                            <tbody>
                                <% for (let i=0; i < datos.length; i++) { %>
                                    <tr>
                                        <% for (let j=0; j < recetas.length; j++) { %>
                                        <td scope="col"><%= i+1 %></td>
                                        <td scope="col"><%= datos[i].tratamiento %></td>
                                        <td scope="col"><%= datos[i].horaInicio %></td>
                                        <td scope="col"><%= datos[i].horaFin %></td>
                                        <td scope="col"><%= datos[i].ficha %></td>
                                        <td scope="col"><%= datos[i].Estado %></td>
                                        <td scope="col"><%= datos[i].Preciototal %></td>
                                        <td scope="col">                                        
                                            <% if(datos[i].id == recetas[j].id_A){ %> 
                                                <form action="/ViewRe" method="post">                            
                                                    <input type="hidden" name="idreceta" value= <%= recetas[j].id %> >
                                                    <button class="btn btn-outline-primary" type="submit">Ver</button>
                                                </form>
                                            <% } %>                                         
                                        </td>
                                    <% } %>                               
                                    </tr>
                                    <% } %>
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
        
    </div>    

</div>


</body>