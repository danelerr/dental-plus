<%- include('../partials/barramenu') %>
<div class="container">
    <div class="row">
        <div class="jumbotron ">
            <h1>
                Fichas de <%= user.nombre %>
            </h1>
       </div>           
    </div> 
</div> 

<div class="container">

    <ul class="nav nav-tabs justify-content-end">
        <li class="nav-item">
        <a class="nav-link active" id="list-tab" data-toggle="tab" href="/gpaciente" role="tab" aria-controls="list" aria-selected="false">Fichas</a>
        </li>
        <li class="nav-item">
        <a class="nav-link" id="form-tab" data-toggle="tab" href="/agendar" role="tab" aria-controls="form" aria-selected="true">Reservar</a>				   	
        </li>
    </ul>
    
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="list" role="tabpanel" aria-labelledby="list-tab">
            <div class="card">
                <div class="card-header">
                    <h4>Lista</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="userList" class="table table-bordered table-hover table-striped">
                            <thead class="thead-light">
                            <tr>
                                <th scope="col">Nro ticket</th>
                                <th scope="col">fecha de la cita </th>
                                <th scope="col">hora de la cita </th>
                                <th scope="col"> Especialidad </th>
                                <th scope="col"> Tratamiento </th>
                                <th scope="col">Nobre odontologo/a </th>
                            </tr>
                            </thead>
                            <tbody>
                                <% for (let i=0; i < datos.length; i++) { %>
                                <tr>
                                    <td scope="col"><%= datos[i].id%></td>
                                    <td scope="col"><%= datos[i].fechaCita %></td>
                                    <td scope="col"><%= datos[i].horaCita %></td>
                                    <td scope="col"><%= datos[i].especialidadNombre %></td>
                                    <td scope="col"><%= datos[i].nombreTratamiento %></td>
                                    <td scope="col"><%= datos[i].odonto %></td>
                                    <td scope="row p-3">
                                    <form action="/misfichas/eliminar" method="post">
                                        <input type="hidden" name="idficha" value=<%= datos[i].id %>>
                                        <button class="btn btn-outline-danger bi bi-trash" type="submit" ></button>
                                    </form>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
        
    </div>    

</div>


</body>