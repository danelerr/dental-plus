<body id="body">

    <!-------MENU LATERAL------->
    <header>
        <div class="icon__menu">
            <i class="fas fa-bars" id="btn_open"></i>
        </div>
    </header>

    <div class="menu__side" id="menu_side">

        <div class="name__page">
            <i class="bi bi-person-circle"></i>
            <h4><%= user.nombre %></h4>
        </div>

        <div class="options__menu">

            <a href="/home" class="selected">
                <div class="option">
                    <i class="fas fa-home" title="Inicio"></i>
                    <h4>Inicio</h4>
                </div>
            </a>

            <a href="/perfil">
                <div class="option">
                    <i class="far fa-file" title="Gestión"></i>
                    <h4>Gestión</h4>
                </div>
            </a>
            <ul>
                <% if(VerA) { %>
                <li><a href="/gpaciente">Paciente</a></li>
                <li><a href="/godonto">Odontólogo</a></li>
                <li><a href="/servicio">Servicio</a></li>
                <li><a href="/Bitacora">Bitacora</a></li>
                <% } %>
                <% if(VerP) { %>
                    <li><a href="/agendar">Reservar</a></li>
                <% } %>
                <% if(VerO) { %>
                    <li><a href="/gpaciente">Paciente</a></li>
                    <li><a href="/servicio">Servicio</a></li>
                    <li><a href="/Historias">Historias</a></li>
                <% } %>
            </ul>
            <% if(VerA) { %>
            <a href="/perfil/info">
                <div class="option">
                    <i class="bi bi-folder" title="Informes"></i>
                    <h4>Informes</h4>
                </div>
            </a>
            <% } %>
            <a href="/Agenda">
                <div class="option">
                    <i class="bi bi-calendar-date" title="Calendario"></i>
                    <h4>Agenda</h4>
                </div>
            </a>

            <a href="/home">
                <div class="option">
                    <i class="bi bi-person-square" title="Perfil"></i>
                    <h4>Perfil</h4>
                </div>
            </a>

            <a href="/cerrar">
                <div class="option">
                    <i class="bi bi-box-arrow-right" title="Cerrar Sesión"></i>
                    <h4>Cerrar Sesión</h4>
                </div>
            </a>

        </div>

    </div>

